    <script>
        $(document).ready(function () {
            $("#NewKonuSubmit").submit(function (event) {
                event.preventDefault();
                Mesaj("warning", "Lütfen Tüm alanları doldurunuz.");
                // Tüm form alanlarını al
                var formData = $(this).serializeArray();
                // Alanların boş olup olmadığını kontrol et
                var isFormValid = true;
                for (var i = 0; i < formData.length; i++) {
                    if (formData[i].value.trim() === '') {
                        isFormValid = false;
                        break;
                    }
                }
                // Eğer bir alan boşsa, kaydı yapma ve kullanıcıya hata mesajı göster
                if (!isFormValid) {
                    Mesaj("warning", "Lütfen Tüm alanları doldurunuz.");
                    return;
                }
                // Form verilerini sunucuya gönder
                $.ajax({
